{{ form_start(form, {'attr' :{'class' : 'form-disable', 'novalidate': 'novalidate', 'role': 'form'}}) }} 

        <div class="row">

            <div class="col-md-6">

             <div class="form-group m-b-40">

                    <label>Id Site</label> : <span class=" text-danger">*</span>

                    <input type="text" class="form-control"   name="{{ form.siteId.vars.full_name}}" value="{{ form.siteId.vars.value }}" autofocus>

                    {% if not form.siteId.vars.valid %}

                        {% for error in form.siteId.vars.errors  %}

                            <span style="color:#f31313;"> {{ error.message }}</span>

                        {% endfor %}

                    {% endif %}

                    {% do form.siteId.setRendered %}

              </div>

            </div>

            <div class="col-md-6">

                <div class="form-group m-b-40">

                    <label>Nom de site</label> : <span class=" text-danger">*</span>

                    <input type="text" class="form-control"   name="{{ form.name.vars.full_name}}" value="{{ form.name.vars.value }}" autofocus>

                    {% if not form.name.vars.valid %}

                        {% for error in form.name.vars.errors  %}

                            <span style="color:#f31313;"> {{ error.message }}</span>

                        {% endfor %}

                    {% endif %}

                    {% do form.name.setRendered %}

                </div>

            </div>

