{% extends ('security/login.html.twig') %}

{% block title %} INTT - Récupérer votre mot de passe {% endblock %}

{% block subtitle %}
    <h6 class="card-subtitle line-on-side text-muted text-center font-small-3 pt-2"><span><strong> Récupérer votre mot de passe</strong></span></h6>
{% endblock %}


{% block content %}
<div class="card-content">
    <div class="card-body">
        {{ form_start(form, { 'action': path('back_resetting_reset', {'token': token}), 'attr': { 'class': 'form-horizontal ui center form', 'id': 'reset-form', 'novalidate': '' } }) }}

            <fieldset class="form-group position-relative has-icon-left">
                {{ form_widget(form, {'attr': {'class': ''}}) }}
            </fieldset>

            <button type="submit" class="btn btn-primary btn-block" name="_submit"><i class="ft-unlock"></i> Réinitialiser le mot de passe</button>
        {{ form_end(form) }}

        <p class="text-right mt-3"><a href="{{ path('app_login') }}" class="card-link"><strong><i class="fa fa-arrow-left"></i> Login</strong></a></p>
        
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        jQuery('.form-group input').each(function(index, element) {
            jQuery(element).addClass('form-control');
        });
    </script>
{% endblock %}
