{% extends 'security/login.html.twig' %}

{% block title %} INTT - Récupérer votre mot de passe {% endblock %}

{% block subtitle %}
    <h6 class="card-subtitle line-on-side text-muted text-center font-small-3 pt-2"><span><strong> Récupérer votre mot de passe</strong></span></h6>
{% endblock %}

{% block content %}
    
    <div class="card-content">
        <div class="card-body">
            <form class="form-horizontal" action="{{ path('back_resetting_send_email') }}" method="post">
                <fieldset class="form-group position-relative has-icon-left">
                    <input type="text" class="form-control form-control-lg" id="username" name="username"  value="{{username}}" placeholder="Nom utilisateur ou Adresse e-mail" required>

                    <div class="form-control-position">
                        <i class="ft-user"></i>
                    </div>

                </fieldset>
                <button type="submit" class="btn btn-outline-primary btn-block" name="_submit"><i class="ft-mail"></i> Envoyer</button>
            </form>
             <p class="text-right mt-3"><a href="{{ path('app_login') }}" class="card-link"><strong><i class="fa fa-arrow-left"></i> Login</strong></a></p>
        </div>

    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        jQuery('.form-group input').each(function(index, element) {
            jQuery(element).addClass('form-control');
        });
    </script>
{% endblock %}
