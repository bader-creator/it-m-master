{{ form_start(form, {'attr' :{'class' : 'form-disable', 'novalidate': 'novalidate', 'role': 'form'}}) }} 

        <div class="row">

             <div class="col-md-6">

                <div class="form-group m-b-40">
                 <label>Nom produit </label> : <span class=" text-danger">*</span>

                    {{ form_widget(form.stock, {'attr' : {'class':'select2 form-control'}})}}

                    {% if not form.stock.vars.valid %}

                        {% for error in form.stock.vars.errors  %}
                            <span style="color:#f31313;"> {{ error.message }}</span>

                        {% endfor %}

                    {% endif %}

                    {% do form.stock.setRendered %}

                </div>
            </div> <!-- end div label -->

              <div class="col-md-6">

                <div class="form-group m-b-40">

                    <label>quantit√© sortie</label> : <span class=" text-danger">*</span>

                    <input type="text" class="form-control"   name="{{ form.quantiteSortie.vars.full_name}}" value="{{ form.quantiteSortie.vars.value }}" autofocus>

                    {% if not form.quantiteSortie.vars.valid %}

                        {% for error in form.quantiteSortie.vars.errors  %}

                            <span style="color:#f31313;"> {{ error.message }}</span>

                        {% endfor %}

                    {% endif %}

                    {% do form.quantiteSortie.setRendered %}

                </div></div>

          
            
            
            
            <div class="col-md-12">
               
                <a   class="btn btn-danger waves-effect pull-left text-white"
                    {% if action == "editMateriel" %} 
                     href="{{ path('mission_page',{selected_row:selected_row,search_input:search_input,page:page}) }}" {% endif %}>Annuler
                </a>
                
                {{ form_widget(form.save, {'attr' :{'class':'btn btn-success pull-right'}})}}

            </div><!-- end div action -->

        </div><!-- end div row -->

{{ form_end(form) }}