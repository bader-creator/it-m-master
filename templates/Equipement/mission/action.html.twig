{{ form_start(form, {'attr' :{'class' : 'form-disable', 'novalidate': 'novalidate', 'role': 'form'}}) }} 

        <div class="row">

           
                 <div class="col-md-12">

                <div class="form-group m-b-40">
                 <label>Liste des sites </label> : <span class=" text-danger">*</span>

                    {{ form_widget(form.site, {'attr' : {'class':'select2 form-control'}})}}

                    {% if not form.site.vars.valid %}

                        {% for error in form.site.vars.errors  %}

                            <span style="color:#f31313;"> {{ error.message }}</span>

                        {% endfor %}

                    {% endif %}

                    {% do form.site.setRendered %}

                </div>
            </div> <!-- end div label -->
            
            
            <div class="col-md-12">

                <a  class="btn btn-danger waves-effect pull-left text-white"
                    {% if action == "add" %} href="{{ path('mission_page') }}" {% elseif action == "edit" %}
                     href="{{ path('mission_page',{selected_row:selected_row,search_input:search_input,page:page}) }}" {% endif %}>Annuler
                </a>

                {{ form_widget(form.save, {'attr' :{'class':'btn btn-success pull-right'}})}}

            </div><!-- end div action -->

        </div><!-- end div row -->

{{ form_end(form) }}