{{ form_start(form, {'attr' :{'class' : 'form-disable', 'novalidate': 'novalidate', 'role': 'form'}}) }} 

        <div class="row">

            <div class="col-md-12">

                <div class="form-group m-b-40">

                    <label>Nom de question</label> : <span class=" text-danger">*</span>

                    <input type="text" class="form-control"   name="{{ form.label.vars.full_name}}" value="{{ form.label.vars.value }}" autofocus>

                    {% if not form.label.vars.valid %}

                        {% for error in form.label.vars.errors  %}

                            <span style="color:#f31313;"> {{ error.message }}</span>

                        {% endfor %}

                    {% endif %}

                    {% do form.label.setRendered %}

                </div>
            </div> <!-- end div col md12 --> 

            <div class="col-md-6">

                    <div class="form-group m-b-40">

                    <label>Criticit√©</label> : <span class=" text-danger"></span>

                    {{ form_widget(form.criticity, {'attr' : {'class':'select2 form-control'}})}}

                    {% if not form.criticity.vars.valid %}

                        {% for error in form.criticity.vars.errors  %}

                            <span style="color:#f31313;"> {{ error.message }}</span>

                        {% endfor %}

                    {% endif %}

                    {% do form.criticity.setRendered %}

                </div>
            </div>

            <div class="col-md-6">

                <div class="form-group m-b-40">

                    <label>Type de question</label> : <span class=" text-danger">*</span>

                    {{ form_widget(form.type, {'attr' : {'class':'select2 form-control'}})}}

                    {% if not form.type.vars.valid %}

                        {% for error in form.type.vars.errors  %}

                            <span style="color:#f31313;"> {{ error.message }}</span>

                        {% endfor %}

                    {% endif %}

                    {% do form.type.setRendered %}

                </div>
            </div>

             <div class="col-md-12 div_choix">

                <div class="form-group m-b-40">
                        
                    <label>Choix</label> : <span class=" text-danger">*</span>
                        
                    {{ form_widget(form.choix, {'attr' : {'class':'select2 form-control','multiple':'multiple'}})}}

                    {% if not form.choix.vars.valid %}

                        {% for error in form.choix.vars.errors  %}

                            <span style="color:#f31313;"> {{ error.message }}</span>

                        {% endfor %}
                
                    {% endif %}

                    {% do form.choix.setRendered %}

                </div>
            </div>

            <div class="col-md-12">

                <a  class="btn btn-danger waves-effect pull-left text-white"
                    {% if action == "add" %} href="{{ path('question_page') }}" {% elseif action == "edit" %}
                     href="{{ path('question_page',{selected_row:selected_row,search_input:search_input,page:page}) }}" {% endif %}>Annuler
                </a>

                {{ form_widget(form.save, {'attr' :{'class':'btn btn-success pull-right'}})}}
            </div>
           
        </div><!-- end div row -->

{{ form_end(form) }}