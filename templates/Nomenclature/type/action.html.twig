{{ form_start(form, {'attr' :{'class' : 'form-disable', 'novalidate': 'novalidate', 'role': 'form'}}) }} 

        <div class="row">

            <div class="col-md-6">

                <div class="form-group m-b-40">

                    <label>Type Nomenclature</label> : <span class=" text-danger">*</span>

                    <input type="text" class="form-control"   name="{{ form.name.vars.full_name}}" value="{{ form.name.vars.value }}" autofocus>

                    {% if not form.name.vars.valid %}

                        {% for error in form.name.vars.errors  %}

                            <span style="color:#f31313;"> {{ error.message }}</span>

                        {% endfor %}

                    {% endif %}

                    {% do form.name.setRendered %}

                </div>
        
            </div> <!-- end div name -->

            <div class="col-md-6">

                <div class="form-group m-b-40">

                    <label>Code Nomenclature</label> : <span class=" text-danger">*</span>

                    <input type="text" class="form-control"   name="{{ form.code.vars.full_name}}" id="{{ form.code.vars.id}}" value="{{ form.code.vars.value }}" {% if action == "edit" %} disabled {% endif %} >

                    {% if not form.code.vars.valid %}

                        {% for error in form.code.vars.errors  %}

                            <span style="color:#f31313;"> {{ error.message }}</span>

                        {% endfor %}

                    {% endif %}

                    {% do form.code.setRendered %}

                </div>
        
            </div> <!-- end div code -->

            <div class="col-md-12">

                <a  class="btn btn-danger waves-effect pull-left text-white"
                    {% if action == "add" %} href="{{ path('type_nomenclature_page') }}" {% elseif action == "edit" %}
                     href="{{ path('type_nomenclature_page',{selected_row:selected_row,search_input:search_input,page:page}) }}" {% endif %}>Annuler
                </a>

                {{ form_widget(form.save, {'attr' :{'class':'btn btn-success pull-right'}})}}

            </div><!-- end div action -->

        </div><!-- end div row -->

{{ form_end(form) }}